{
    "app": "python3 -m black ./ && python3 app.py",
    "watch": {
      "include": [
        "**"
      ],
      "exclude": [
        "README.md",
        "cdk*.json",
        "requirements*.txt",
        "source.bat",
        "**/__init__.py",
        "python/__pycache__",
        "tests"
      ]
    },
    "context": {
      "aws-cdk:enableDiffNoFail": "true"
    }
  }